{
    "manifest_version": 3,
    "name": "MferSafe",
    "description": "MferSafe's Browser extension",
    "version": "0.0.2",
    "icons": {
        "128": "logo/128x128.png"
    },
    "action": {
        "default_title": "MferSafe",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "js": [
                "content-script.js"
            ],
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "redir.js",
                "eip1193provider.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
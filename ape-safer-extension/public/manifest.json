{
  "name": "Ape Safer Extension",
  "description": "Keep Degen And Ape In!",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "ApeSafer",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "redirect.js"
    ]
  },
  "web_accessible_resources": [
    "provider.js"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "injectweb3.js"
      ],
      "run_at": "document_start",
      "css": [],
      "all_frames": true
    }
  ]
}